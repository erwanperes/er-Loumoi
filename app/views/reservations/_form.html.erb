<%= simple_form_for([item, reservation]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
	<%= f.input :start_date,
				label: 'Date de début',
				as: :date,
				html5: true,
				input_html: { class: 'form-control' },
				wrapper_html: { class: 'mb-3' } %>

	<%= f.input :end_date,
				label: 'Date de fin',
				as: :date,
				html5: true,
				input_html: { class: 'form-control' },
				wrapper_html: { class: 'mb-3' } %>
  </div>

  <div class="form-actions">
	<%= f.button :submit, 'Créer la réservation', class: 'btn btn-primary me-2' %>
	<%= link_to 'Annuler', :back, class: 'btn btn-outline-secondary mt-4' %>
  </div>
<% end %>